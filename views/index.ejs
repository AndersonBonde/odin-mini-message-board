<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <ul class="messages">
      <% messages.forEach((message) => { %>
        <li class="message">
          <div class="message-header">
            <div class="message-user">
              <%- message.user %>
            </div>
            <div class="message date">
              <%- message.added %>
            </div>
          </div>
          <div class="message-text">
            <%= message.text %>
          </div>
        </li>
      <% }); %>
    </ul>
    <a class="comment-button" href="./new">Leave a comment</a>
  </body>
</html>
